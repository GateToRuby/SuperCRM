%h1 Login
= form_for @user_session, :url => user_session_path do |f|
  - if @user_session.errors.any?
    #error_explanation
      %h2
        = pluralize(@user_session.errors.count, "error")
        prohibited this team from being saved:
      %ul
        - @user_session.errors.full_messages.each do |msg|
          %li= msg  
  = f.label :username
  %br
  = f.text_field :username
  %br
  = f.label :password
  %br
  = f.password_field :password
  %br
  = f.check_box :remember_me
  = f.label :remember_me
  %br
  = f.submit "Login"


  
%p= link_to 'Register', new_account_path
%p=# link_to 'I forgot my password', new_password_reset_path


.container
  %form.form-signin
    %h3.form-signin-heading Please sign in
    .controls.input-icon
      %i.icon-user-md
      %input.input-block-level{:placeholder => "Email address", :type => "text"}/
    .controls.input-icon
      %i.icon-key
      %input.input-block-level{:placeholder => "Password", :type => "password"}/
    %label.checkbox
      %input{:type => "checkbox", :value => "remember-me"}/
      Remember me
    %button.btn.btn-inverse.btn-block{:type => "submit"} Sign in
    %h4 Forgot your password ?
    %p
      %a{:href => "#"} Click here
      to reset your password.
    %h5 Don't have an account yet ?
    %button.btn.btn-success.btn-block{:type => "submit"} Create Account
