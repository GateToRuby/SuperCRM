%h1 Login
= form_for @user_session, :url => user_session_path do |f|
  - if @user_session.errors.any?
    #error_explanation
      %h2
        = pluralize(@user_session.errors.count, "error")
        prohibited this team from being saved:
      %ul
        - @user_session.errors.full_messages.each do |msg|
          %li= msg  
  = f.label :username
  %br
  = f.text_field :username
  %br
  = f.label :password
  %br
  = f.password_field :password
  %br
  = f.check_box :remember_me
  = f.label :remember_me
  %br
  = f.submit "Login"


  
%p= link_to 'Register', new_account_path
%p=# link_to 'I forgot my password', new_password_reset_path


.container
  = form_for @user_session, :url => user_session_path, :html => {:class => 'form-signin'} do |f|
    %h3.form-signin-heading Please sign in
    .controls.input-icon
      %i.icon-user-md
      = f.text_field :username, :placeholder => 'Username', :class => 'input-block-level'
    .controls.input-icon
      %i.icon-key
      = f.password_field :password, :placeholder => "Password", :class => 'input-block-level'
    %label.checkbox
      = f.check_box :remember_me
      Remember me
    = f.submit 'Sign in', :class => "btn btn-inverse btn-block"
    %h4 Forgot your password ?
    %p
      = link_to 'Click here to reset your password.', '#'
    %h5 Don't have an account yet ?
    = button_to 'Create Account', '#', :class => 'btn btn-success btn-block'
