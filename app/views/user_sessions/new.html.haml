%h1 Login
= form_for @user_session, :url => user_session_path do |f|
  - if @user_session.errors.any?
    #error_explanation
      %h2
        = pluralize(@user_session.errors.count, "error")
        prohibited this team from being saved:
      %ul
        - @user_session.errors.full_messages.each do |msg|
          %li= msg  

.container
  = form_for @user_session, :url => user_session_path, :html => {:class => 'form-signin'} do |f|
    %h3.form-signin-heading Please sign in
    .controls.input-icon
      %i.icon-user-md
      = f.text_field :username, :placeholder => 'Username', :class => 'input-block-level'
    .controls.input-icon
      %i.icon-key
      = f.password_field :password, :placeholder => "Password", :class => 'input-block-level'
    %label.checkbox
      = f.check_box :remember_me
      Remember me
    = f.submit 'Sign in', :class => "btn btn-inverse btn-block"
    %h4 Forgot your password ?
    %p
      = link_to 'Click here to reset your password.', '#new_password_reset_path'
    %h5 Don't have an account yet ?
    = link_to new_account_url do
      = button_tag 'Create Account', :type => 'button',:class => 'btn btn-success btn-block' 
